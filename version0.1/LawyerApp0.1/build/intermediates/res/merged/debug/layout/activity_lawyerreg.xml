<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.LawyerReg">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:id="@+id/Lname"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Lregister"
        android:onClick="registerClicked" />

    <TextView
        android:text="LAWYER REGISTRATION FORM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Area of Specialisation"
        android:ems="10"
        android:id="@+id/Lspecial"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/Lname"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Alma Mater"
        android:ems="10"
        android:id="@+id/Lalma"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Llocation"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:ems="10"
        android:id="@+id/Llocation"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/Lspecial"
        android:layout_alignParentStart="true"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Experience in years"
        android:ems="10"
        android:id="@+id/Lexp"
        android:layout_below="@+id/Lalma"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/Lnumber"
        android:hint="contact number"
        android:layout_below="@+id/Lexp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Lemail"
        android:hint="email"
        android:layout_below="@+id/Lnumber"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:inputType="textEmailAddress" />
</RelativeLayout>
